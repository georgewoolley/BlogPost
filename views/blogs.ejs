<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@900&family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">

    <title>Document</title>
</head>
<body>
    

    <% if (blogs.length >= 1) { %>
    <% blogs.forEach(blog => { %>
        <h1><%= blog.title %></h1>
        <h4><%= blog.dateTime %></h4>
        <p><%= blog.description %></p>
        <a href="/edit/<%= blog.blogId %>">Edit</a>
           <form action="/delete/<%= blog.blogId %>" method="post">
            <button type="submit">Delete</button>
        </form>
        
    <% }); %>

    <%} else { %>
        <p>There are no new blogs</p>
        <%} %>






</body>
</html>